<UserControl x:Class="FSP.Windows.Reports.CompanyAdministration.SisterCompanyDetailSectionReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Width="620" HorizontalAlignment="Right" Loaded="UserControl_Loaded">
    <Grid>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
            <Border BorderBrush="Black" BorderThickness="3" >
                <TextBlock Text="" Name="txt_CompanyName" TextAlignment="Center" FontFamily="/FSP.Windows;component/Fonts/#HamzahMateen" FontSize="20" Width="200"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="3" >
                <TextBlock Text="" Name="txt_CompanySector" TextAlignment="Center" FontFamily="/FSP.Windows;component/Fonts/#HamzahMateen" FontSize="20" Width="200"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="3" >
                <TextBlock Text="" Name="txt_OwnerPercentage" TextAlignment="Center" FontFamily="/FSP.Windows;component/Fonts/#HamzahMateen" FontSize="20" Width="200"/>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
